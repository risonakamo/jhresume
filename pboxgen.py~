import json;

def main():
    with open("pbox.json","r",encoding="utf8") as jfile:
        data=json.load(jfile);

    for x in data["boxes"]:
        print(genBoxBox(x));


def genBoxBox(data):
    html='''<div class="program-box-box {}">
<p class="pbox-title">{}</p>\n'''.format(data["colour"],data["title"]);

    for x in data["items"]:
        html+=genBox(x["img"],x["title"]);

    return html;

def genBox(img,name):
    return '''<div class="program-box">
<img src="{}">
<p>{}</p>
</div>'''.format(img,name);

main();